<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="12dp"
        android:background="#3284FF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DAE9FF"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="북스토어 고객센터입니다."
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무엇이든 검색해보세요."
            android:textColor="#3A89FF"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/searchFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FAQ 검색"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_search"
            android:paddingVertical="13dp"
            android:paddingHorizontal="25dp"
            android:layout_margin="15dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/mymenu01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mymenu01"
            android:scaleType="fitCenter"
            android:padding="0dp"/>
        <ImageButton
            android:id="@+id/mymenu02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mymenu02"
            android:scaleType="fitCenter"
            android:padding="0dp"/>
        <ImageButton
            android:id="@+id/mymenu03"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mymenu03"
            android:scaleType="fitCenter"
            android:padding="0dp"/>
        <ImageButton
            android:id="@+id/mymenu04"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mymenu04"
            android:scaleType="fitCenter"
            android:padding="0dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자주 묻는 질문 TOP 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[리뷰/한줄평] 포인트는 언제 받을 수 있나요?"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[리뷰/한줄평] 적립된 포인트가 환수되었어요."
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[배송] 총알배송 서비스란 무엇인가요?"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="3dp"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:1 문의내역"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="1:1 문의하기"
                android:textSize="10sp"
                android:padding="3dp"
                android:backgroundTint="#3284FF"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="160dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약판매 배송지연"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품 재입고 언제 되는지 문의드립니다."
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="3dp"/>


</LinearLayout>